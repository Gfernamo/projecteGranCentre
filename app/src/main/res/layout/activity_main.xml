<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MainActivity">
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_business"
            android:src="@drawable/business"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="@string/imatge_negocis"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_restaurants"
            android:src="@drawable/restaurants"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="@string/imatge_restaurants"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_hotels"
            android:src="@drawable/parkings"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="@string/imatge_hotels"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_movies"
            android:src="@drawable/movies"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="@string/imatge_cartellera"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_transports"
            android:src="@drawable/restaurants"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="@string/imatge_transports"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_parking"
            android:src="@drawable/hotels"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="@string/imatge_parkings"
            />
    </GridLayout>
</LinearLayout>