<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_business"
        android:src="@drawable/business"
        android:layout_column="0"
        android:layout_row="0"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_restaurants"
        android:src="@drawable/restaurants"
        android:layout_column="0"
        android:layout_row="1"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_hotels"
        android:src="@drawable/hotels"
        android:layout_column="0"
        android:layout_row="2"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_movies"
        android:src="@drawable/movies"
        android:layout_column="1"
        android:layout_row="0"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_transports"
        android:src="@drawable/restaurants"
        android:layout_column="1"
        android:layout_row="1"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_parking"
        android:src="@drawable/hotels"
        android:layout_column="1"
        android:layout_row="2"
        />
</GridLayout>